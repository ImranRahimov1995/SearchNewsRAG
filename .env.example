# Rag
SETTINGS=local

OPENAI_API_KEY=your_openai_api_key_here

#Telegram API credentials
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash

CHROMA_COLLECTION_NAME=news_analyzed_0_5k_800_200_large

# Application settings
ENVIRONMENT=local
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ChromaDB settings
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_DB_PATH=./chroma_db

# PostgreSQL settings
POSTGRES_USER=newsapp
POSTGRES_PASSWORD=newsapp
POSTGRES_DB=newsapp

# Frontend settings
VITE_API_BASE_URL=http://localhost:8000

# Docker Hub credentials
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=SearchNewsRAG

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Superuser Auto-Creation
SUPERUSER_EMAIL=admin@searchnewsrag.com
SUPERUSER_PASSWORD=change-this-secure-password
