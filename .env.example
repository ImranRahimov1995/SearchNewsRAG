# Rag
SETTINGS=local

OPENAI_API_KEY=your_openai_api_key_here

#Telegram API credentials
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash

CHROMA_COLLECTION_NAME=news_analyzed_0_5k_800_200_large

# Application settings
ENVIRONMENT=local
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ChromaDB settings
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_DB_PATH=./chroma_db

# PostgreSQL settings
POSTGRES_USER=newsapp
POSTGRES_PASSWORD=newsapp
POSTGRES_DB=newsapp

# Frontend settings
VITE_API_BASE_URL=http://localhost:8000

# Docker Hub credentials
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=SearchNewsRAG

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Superuser Auto-Creation
SUPERUSER_EMAIL=admin@searchnewsrag.com
SUPERUSER_PASSWORD=change-this-secure-password

# Redis & Celery Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379
CELERY_WORKER_CONCURRENCY=2
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=change_me_in_production

# Docker Service Ports
POSTGRES_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Container Resource Limits (Development)
CELERY_WORKER_CPU_LIMIT=2
CELERY_WORKER_MEMORY_LIMIT=2G
CELERY_WORKER_CPU_RESERVATION=0.5
CELERY_WORKER_MEMORY_RESERVATION=512M
CELERY_BEAT_CPU_LIMIT=0.5
CELERY_BEAT_MEMORY_LIMIT=256M
CELERY_BEAT_CPU_RESERVATION=0.1
CELERY_BEAT_MEMORY_RESERVATION=128M
FLOWER_CPU_LIMIT=0.5
FLOWER_MEMORY_LIMIT=256M
FLOWER_CPU_RESERVATION=0.1
FLOWER_MEMORY_RESERVATION=128M

# Monitoring Configuration
# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=monitoring_admin_2024
GRAFANA_PLUGINS=
GRAFANA_FEATURE_TOGGLES=
GRAFANA_LOG_LEVEL=info

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=30d

# Loki
LOKI_PORT=3100

# Node Exporter
NODE_EXPORTER_PORT=9100

# cAdvisor
CADVISOR_PORT=8080

# Monitoring Network
MONITORING_NETWORK_NAME=monitoring

# Production specific variables (for monitoring)
DOMAIN=news.aitools.az
GRAFANA_ADMIN_USER=your-superuser-username
GRAFANA_ADMIN_PASSWORD=your-secure-superuser-password
PROMETHEUS_RETENTION_TIME=30d
